<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Email Id"
             />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:paddingStart="8dp"
                    android:id="@+id/editMailId"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="6dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_monthly_income" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalIncomeMonthly"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/applicant_caste" />
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalCaste"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/applicant_religion" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalReligion"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>






        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
        android:text="Place of Birth" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <EditText
                    android:paddingStart="8dp"
                    android:id="@+id/editPlaceOfBirth"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="50dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
        android:text="@string/applicant_present_residence_owner" />


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalPresentResidenceOwner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/applicant_house_rent" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalPresentHouseRent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/applicant_residence_duration" />
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalPresentResidenceDuration"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15dp"
            android:fontFamily="@font/scada_regular"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/applicant_family_members" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalFamilyMembers"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">

    <TextView
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FatherFirstName"/>

    <TextView
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FatherMiddelName"/>

    <TextView
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FatherLastName"/>


        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MotherFirstName"/>

        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MotherMiddelName"/>

        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MotherLastName"/>

         <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpouseFirstName"/>

        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpouseMiddelName"/>

        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpouseLastName"/>

</LinearLayout>

    </LinearLayout>
</ScrollView>